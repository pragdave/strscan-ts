{
  "compilerOptions": {
    "declaration":     true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib":             [ "es2020" ],
    "module":          "commonjs",
    "outDir":          "./dist",
    "rootDir":         "./src",
    "skipLibCheck":    true,
    "strict":          true,
    "target":          "es2020",
    "types": [
      "jest",
      "node"
    ]
  },
  "exclude":         [ "test/" ]
}
